<section class="section">
	<div class="container">
		<div class="_tabs-container">
			<div class="ui-kit__wrapper">
				<h2 class="section__title">Валидация форм</h2>
				<div class="g-tabs">
					<ul class="ui-kit__tabs-menu">
						<li class="ui-kit__tabs-item g-tabs__item g-tabs__item_active" onclick="o2.gTabs.open(this, 1.2)">
							<a class="ui-kit__tabs-link g-tabs__link" href="javascript:void(0);">Visual</a>
						</li>
						<li class="ui-kit__tabs-item g-tabs__item" onclick="o2.gTabs.open(this, 1.3)">
							<a class="g-tabs__link" href="javascript:void(0);">Show code</a>
						</li>
					</ul>
				</div>
			</div>

			<div class="g-tab g-tab_open" data-tab-id="1.2">
				<div class="g-tab__content">
					# кастомные before коллбеки для установки нужных классов
					<form onsubmit="return o2.authForm.submit(this)">
						<div class="form-field _field" data-call="empty">
							<input value="1" type="text" name="name" placeholder="Имя">
							<span class="form-field__msg _error-msg"></span>
						</div>
						<div class="form-field _field" data-code="phone" data-call="empty phone custom">
							<input value="1" type="text" name="phone" placeholder="Телефон" >
							<span class="form-field__msg _error-msg"></span>
						</div>
						<div class="form-field _field" data-code="email" data-call="empty">
							<input value="1" type="text" name="email" placeholder="Email">
							<span class="form-field__msg _error-msg"></span>
						</div>
						<div class="form-field _field" data-call="empty">
							<input value="1" type="text" name="password" placeholder="Пароль">
							<span class="form-field__msg _error-msg"></span>
						</div>
						<div class="form-field _field" data-call="empty">
							<input value="1" type="text" name="repassword" placeholder="Повтор Пароля">
							<span class="form-field__msg _error-msg"></span>
						</div>
						<div class="form-errors _global-errors"></div>
						<input type="submit" value="Отправить">
					</form>
					<style>
					.form-field{margin-bottom: 10px;}
					.form-field.error input{border:1px solid red;}
					.form-field__msg{display: none;}
					.form-field.error .form-field__msg{display: block; color:red;}
					.form-errors{padding:10px; border:1px solid red; display: none;}
					.form-errors.show{display: block;}
					</style>
























				</div>
			</div>
			<div class="g-tab" data-tab-id="1.3">
				<div class="g-tab__content">
					<pre class="prettyprint lang-html ui-kit__pretty"> </pre>
				</div>
			</div>
		</div>
	</div>
</section>